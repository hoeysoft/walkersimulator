#:kivy 1.9.0
#:import st settings

BoxLayout:
    orientation: 'horizontal'
    Controller:
        size_hint_x: 0.2

<Controller>:
    ToggleButton:
        text: 'use avoidance'
        state: 'down' if app.settings.use_avoidance else 'normal'
        on_state: app.settings.use_avoidance = (args[1] == 'down')
