#:kivy 1.9.0
#:import st settings

BoxLayout:
    orientation: 'horizontal'
    Controller:
        size_hint_x: 0.75
        canvas.before:
            Color:
                rgba: .3,.3,.3,1
            Rectangle:
                pos:  self.pos
                size: self.size

<OptLabel@Label>:
    size_hint_x: 0.5
    halign: 'right'

<Controller>:
    cols: 2
    spacing: [0]
    padding: [0]

    OptLabel:
        text: 'avoidance'
    Switch:
        active: app.settings.use_avoidance
        on_active: app.settings.use_avoidance = args[1]

    OptLabel:
        text: 'show directions'
    Switch:
        active: app.settings.show_directions
        on_active: app.settings.show_directions = args[1]

    OptLabel:
        text: 'count'
    OptSliderInt:
        optname: 'walker_count'

    OptLabel:
        text: 'radius'
    OptSlider:
        optname: 'walker_radius'

    OptLabel:
        text: 'speed'
    OptSlider:
        optname: 'walker_speed'

    OptLabel:
        text: 'force'
    OptSlider:
        optname: 'walker_force'

    OptLabel:
        text: 'sight'
    OptSlider:
        optname: 'walker_sight'

    Label:
        text: 'start/stop'
    Label:
        text: 'spacebar'
        bold: True
