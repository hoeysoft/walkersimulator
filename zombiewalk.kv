#:kivy 1.9.0
#:import st settings

BoxLayout:
    orientation: 'vertical'
    Button:
        size_hint_y: 0.1
        on_press: app.on_test()
        

<Zombie>:
    size: (st.ZOMBIE_SIZE, st.ZOMBIE_SIZE)
    canvas:
        Color:
            rgba: st.ZOMBIE_COLOR

        Ellipse:
            pos: self.pos
            size: self.size

<Man>:
    size: (st.MAN_SIZE, st.MAN_SIZE)
    canvas:
        Color:
            rgba: st.MAN_COLOR

        Ellipse:
            pos: self.pos
            size: self.size
