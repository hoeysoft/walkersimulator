#:kivy 1.9.0
#:import opt options

<Zombie>:
    canvas:
        Color:
            rgba: opt.ZOMBIE_COLOR

        Ellipse:
            pos: self.pos
            size: (opt.ZOMBIE_SIZE, opt.ZOMBIE_SIZE)

<Man>:
    canvas:
        Color:
            rgba: opt.MAN_COLOR

        Ellipse:
            pos: self.pos
            size: (opt.MAN_SIZE, opt.MAN_SIZE)
